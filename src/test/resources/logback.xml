<configuration>
  <appender
    name="CONSOLE"
    class="ch.qos.logback.core.ConsoleAppender"
  >
    <encoder>
      <!-- Clean, readable format -->
      <pattern>[%date{HH:mm:ss}] %-5level %replace(%logger){'^com\.slytechs\.sdk\.[a-z]+\.', ''} - %msg%n
      </pattern>
    </encoder>
  </appender>

  <logger
    name="com.slytechs.sdk"
    level="INFO"/>
  <root level="WARN">
    <appender-ref ref="CONSOLE"/>
  </root>
</configuration>